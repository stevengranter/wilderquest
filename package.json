        "@radix-ui/react-tooltip": "^1.2.8",
        "@radix-ui/react-visually-hidden": "^1.2.3",
        "@tanstack/react-query": "^5.85.5",
        "@tanstack/react-table": "^8.21.3",
        "animal-avatar-generator": "^1.2.0",
