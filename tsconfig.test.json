{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": ["jest", "@types/jest", "node"],
        "noEmit": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "test/**/*", "**/*.test.ts", "**/*.spec.ts"],
    "exclude": ["node_modules", "dist", "build"]
}
